{% extends "layout.html" %}

{% block title %}
  Edit Submission
{% endblock %}

{% block main %}
  <div class="container mt-2">
    <h1 class="mb-4">Edit Your Submission</h1>
    <form action="/edited_submission" method="post">
      <input type="hidden" name="submission_id" value="{{ submission.id }}">
      <div class="form-group">
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" id="publicExposure" name="exposure" value="public" {% if submission.exposure == 'public' %}checked{% endif %}>
          <label class="form-check-label" for="publicExposure">Public</label>
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" id="privateExposure" name="exposure" value="private" {% if submission.exposure == 'private' %}checked{% endif %}>
          <label class="form-check-label" for="privateExposure">Private</label>
        </div>
      </div>

      <!-- House Details Fields -->
      <div class="form-group">
        <label for="houseType">House Type:</label>
        <select class="form-control" id="houseType" name="houseType" required>
          <option value="studio" {% if submission.house_type == 'studio' %}selected{% endif %}>Studio</option>
          <option value="flat" {% if submission.house_type == 'flat' %}selected{% endif %}>Flat</option>
          <option value="maisonette" {% if submission.house_type == 'maisonette' %}selected{% endif %}>Maisonette</option>
          <option value="semi-detached_house" {% if submission.house_type == 'semi-detached_house' %}selected{% endif %}>Semi-Detached House</option>
          <option value="detached_house" {% if submission.house_type == 'detached_house' %}selected{% endif %}>Detached House</option>
          <option value="mansion" {% if submission.house_type == 'mansion' %}selected{% endif %}>Mansion</option>
        </select>
      </div>

      <div class="form-group">
        <label for="squareMeters">Square Footage (m&#178;):</label>
        <input type="number" class="form-control" id="squareMeters" name="squareMeters" min="0" max="1000" value={{ submission.square_meters }} required>
      </div>

      <div class="form-group">
        <label for="rental">Rental (&euro;):</label>
        <input type="number" class="form-control" id="rental" name="rental" min="0" max="10000" value={{ submission.rental }} required>
      </div>

      <div class="form-group">
        <label for="bedrooms">Bedrooms:</label>
        <input type="number" class="form-control" id="bedrooms" name="bedrooms" min="0" max="10" value={{ submission.bedrooms }} required>
      </div>

      <div class="form-group">
        <label for="bathrooms">Bathrooms:</label>
        <input type="number" class="form-control" id="bathrooms" name="bathrooms" min="0" max="10" value={{ submission.bathrooms }} required>
      </div>

      <!-- Two buttons for either save the edited submission or delete it -->
      <div class="form-group">
        <button type="submit" class="btn btn-primary" name="save" value="true">Save</button>
        <button type="submit" class="btn btn-danger" name="delete" value="true">Delete</button>
      </div>
      </form>
    </form>

    
  </div>
{% endblock %}
