{% extends "layout.html" %}

{% block title %}
  Submit a House
{% endblock %}    

{% block main %}

  <div class="container mt-2">
    <h1 class="mb-4">Submit Your House Details</h1>
    <form action="/submit" method="post">
    <!-- Exposure Option -->
    <div class="form-group">
      <div class="form-check form-check-inline">
        <input type="radio" class="form-check-input" id="publicExposure" name="exposure" value="public" checked>
        <label class="form-check-label" for="publicExposure">Public</label>
      </div>
      <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" id="privateExposure" name="exposure" value="private">
          <label class="form-check-label" for="privateExposure">Private</label>
      </div>
    </div>
    
      <!-- House Details Fields -->
      <div class="form-group">
        <label for="houseType">House Type:</label>
        <select class="form-control" id="houseType" name="houseType" required>
          <option value="studio">Studio</option>
          <option value="flat">Flat</option>
          <option value="maisonette">Maisonette</option>
          <option value="semi-detached_house">Semi-Detached House</option>
          <option value="detached_house">Dettached House</option>
          <option value="mansion">Mansion</option>
        </select>
      </div>

      <div class="form-group">
        <label for="squareMeters">Square Footage (m&#178;):</label>
        <input type="number" class="form-control" id="squareMeters" name="squareMeters" min="0" max="1000" required>
      </div>

      <div class="form-group">
        <label for="rental">Rental (&euro;):</label>
        <input type="number" class="form-control" id="rental" name="rental" min="0" max="10000" required>
      </div>

      <div class="form-group">
        <label for="bedrooms">Bedrooms:</label>
        <input type="number" class="form-control" id="bedrooms" name="bedrooms" min="0" max="10" required>
      </div>

      <div class="form-group">
        <label for="bathrooms">Bathrooms:</label>
        <input type="number" class="form-control" id="bathrooms" name="bathrooms" min="0" max="10" required>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

{% endblock %}
